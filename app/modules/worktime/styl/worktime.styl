.worktime {
	width 500px
	margin 80px auto
}
.worktime .worktime-line {
	background-color #ebebeb
	width 100%
	margin-bottom 20px
	border-radius 7px
	float left
}
.worktime .worktime-line_hover {
	@extend .worktime .worktime-line
	background-color #643cfa
	color #fbfbfb
}
.worktime-line .worktime-line__day,
.worktime-line .worktime-line__time {
	box-sizing border-box
	width 250px
	padding 10px 20px
	text-align center
	float left
}
.worktime-line .worktime-line__time {
	text-align center
}