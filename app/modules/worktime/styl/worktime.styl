.worktime {
	width 450px
	margin-top 250px
	float left
}
.worktime-title {
	width 100%
	margin-bottom 60px
	font-size 30px
	text-align center
	float left
}
.worktime-body {
	float left
}
.worktime-line {
	background-color #fff
	width 100%
	margin-bottom 0px
	border-radius 1px
	border 1px solid #cbcbcb
	float left
}
.worktime-line_hover {
	@extend .worktime-line
	background-color #fff
	color #000
}
.worktime-line__select {
	background-color #cbcbcb
	width 10px
	height 10px
	margin-top 12px
	margin-left 11px
	border 2px solid #fff
	border-radius 10px
	float left
}
.worktime-line__select_hover {
	@extend .worktime-line__select
	background-color #643cfa
}
.worktime-line__day,
.worktime-line__time {
	box-sizing border-box
	width 225px
	padding 10px 20px
	text-align center
	float left
}
.worktime-line__time {
	width 200px
	text-align center
}