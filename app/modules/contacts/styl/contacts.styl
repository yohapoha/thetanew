.contacts {
	display table
	width 960px
}
.contacts-body {
	display table-cell
	width 400px
	padding-left 160px
	vertical-align middle
}
.contacts-title {
	width 100%
	margin-bottom 50px
	font-size 30px
	text-align center
	float left
}
.contacts-text {
	width 100%
	text-align justify
	font-size 16px
	line-height 40px
	float left
}
.contacts-info {
	display table-cell
	vertical-align middle
}
.contacts-type,
.contacts-value,
.contacts-subvalue  {
	width 400px
	text-align center
	float left
}
.contacts-type {
	padding-top 20px
	margin 20px 0 5px
	font-size 18px
}
.contacts-type_first {
	@extend .contacts-type
	margin-top 0
}
.contacts-value {
	font-size 26px
}
.contacts-subvalue {
	float left
}
.contacts-table {
	display table
	width 400px
	margin 15px 0 5px
}
.contacts-cell {
	display table-cell
	width 10%
}
.contacts-cell .social-button {
	margin 0 auto
	float none
}
.callback-button {
	background-color #f02878
	padding 0 20px
	margin 0 auto
	border-radius 30px
	line-height 40px
	color #fbfbfb
	float left
	cursor pointer
	transition .3s 
}
.callback-button:hover {
	background-color #fa3282
}