.greeting {
	width 100%
	float left
}
.greeting__title {
	font-size 40px
}
.greeting__text {
	margin-top 20px
	color #1b1b1b
}
.greeting-buttons {
	margin-top 50px
}
.greeting-buttons__link {
	background-color #1b1b1b
	padding 10px 20px
	margin-right 40px
	border-radius 30px
	color #fbfbfb
	float left
	cursor pointer
	transition .3s
}
.greeting-buttons__link_highlight {
	@extend .greeting-buttons__link
	background-color #643cfa
}
.greeting-buttons__link:hover {
	background-color #2b2b2b
}
.greeting-buttons__link_highlight:hover {
	background-color #714df9
}